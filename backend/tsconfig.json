{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "commonjs",
    "outDir": "../dist/backend",     // Output to root dist folder for backend
    "rootDir": "./src",              // Assumes your backend code is in backend/src
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "frontend"
  ],
  "ts-node": {
    "esm": false,
    "compilerOptions": {
      "module": "commonjs",
      "noImplicitAny": false
    }
  }
}