{
  "name": "chat-app-monorepo",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "devDependencies": {
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/geoip-lite": "^1.4.4",
    "@types/node": "^18.16.1",
    "@types/express": "^4.17.17",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "typescript": "^5.8.3",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "next": "^13.4.19",
    "express": "^4.18.2",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "passport": "^0.6.0"
  },
  "scripts": {
    "start": "node dist/server.js",
    "dev": "ts-node-dev --ignore-watch frontend/.next server.ts",
    "build": "npm run build:backend && npm run build:frontend && npm run build:server",
    "build:server": "tsc -p tsconfig.server.json",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "clean": "rm -rf dist && rm -rf backend/dist && rm -rf frontend/.next && rm -rf frontend/dist"
  }
}