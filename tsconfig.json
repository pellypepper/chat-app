{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
, "../server.ts"  ],
  "exclude": [
    "node_modules",
    "dist",
    "../frontend"
  ],
  "ts-node": {
    "esm": false,
    "compilerOptions": {
      "module": "commonjs",
      "noImplicitAny": false
    }
  }
}