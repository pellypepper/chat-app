{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": true
  },
  "include": [
    "server.ts",
    "backend/src/**/*"
  ],
  "files": [],
  "references": [
    { "path": "./frontend" },
    { "path": "./backend" },
    { "path": "./tsconfig.server.json" }
  ]
}