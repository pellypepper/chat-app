{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": false,
    "moduleResolution": "node"
  },
  "include": [
    "server.ts",
    "backend/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "frontend",
    "backend/dist",
    "dist"
  ]
}